# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=30d

# SMS Provider Configuration
# 'auto' (recommended): Routes +86 to Tencent, international to Twilio
# 'twilio': Use Twilio for all SMS
# 'tencent': Use Tencent for all SMS
SMS_PROVIDER=auto

# Twilio SMS Configuration (for international numbers)
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567
# Optional: Messaging Service (recommended for production)
TWILIO_MESSAGING_SERVICE_SID=
# Optional: Twilio Verify Service (for using Verify API)
TWILIO_VERIFY_SERVICE_SID=

# Tencent Cloud SMS Configuration (for China +86 numbers)
# Optional if using Twilio only
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_SMS_SDK_APP_ID=your_sms_sdk_app_id
TENCENT_SMS_SIGN_NAME=your_sms_sign_name
TENCENT_SMS_TEMPLATE_ID=your_sms_template_id

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback/google

# OAuth - Google (Developer Console)
DEV_CONSOLE_GOOGLE_CLIENT_ID=your_dev_console_google_client_id
DEV_CONSOLE_GOOGLE_CLIENT_SECRET=your_dev_console_google_client_secret
DEV_CONSOLE_GOOGLE_REDIRECT_URI=http://localhost:5174/auth/callback/google

# OAuth - GitHub (Optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:5173/auth/callback/github

# OAuth - WeChat (Optional)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_REDIRECT_URI=http://localhost:5173/auth/callback/wechat

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Upstash Redis (Recommended for production)
# Get your credentials from https://upstash.com
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_token

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error

# Sentry Error Tracking (Optional - recommended for production)
# Get your DSN from https://sentry.io
SENTRY_DSN=

# Metrics Configuration (Optional)
METRICS_TOKEN=your_secure_metrics_token

# Security Configuration
RATE_LIMIT_ENABLED=true

# Test Mode (Development only - NEVER use in production!)
# If set, this code will be accepted for all verification attempts
TEST_VERIFICATION_CODE=

