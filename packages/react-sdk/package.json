{
    "name": "@55387.ai/uniauth-react",
    "version": "1.0.3",
    "description": "Official React components and hooks for UniAuth integration",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "ai-prompts"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "clean": "rm -rf dist",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "dependencies": {
        "@55387.ai/uniauth-client": "workspace:*"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "jsdom": "^27.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vitest": "^4.0.18"
    },
    "keywords": [
        "auth",
        "authentication",
        "react",
        "uniauth",
        "sso",
        "login",
        "hooks"
    ]
}
